<article class="post p-4 mt-4 mb-4" style="width: 75rem;">
    <div class="card">
      <div class="card-header">
          <a href="/post/{{id}}" target="_blank">{{title}}</a>
          <span>| By {{user.username}} on {{format_date created_at}}</span>
      </div>
  <div class="card-body">
    <h5 class="card-title">({{description}})</h5>
    <p class="card-text"></p>
    <a href="/post/{{id}}" class="btn btn-primary">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</div>
</article>