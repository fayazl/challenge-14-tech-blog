<center>
<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
      <div class="form-group col-3">
      <label for="post-title">Title</label>
      <input type="text" class="form-control mt-2"  id="post-title" name="post-title" />
    </div>
  <div class="form-group col-3">
      <label for="description">Description</label>
      <input id="description" class="form-control mt-2"  name="description" />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Create</button>
  </form>
</section>
</center>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>