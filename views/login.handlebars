<center>
<form class="login-form">
  <h2>Login</h2>
  <div class="form-group col-3">
    <label for="email-login">Email:</label>
    <input type="text" class="form-control mt-2" id="email-login" placeholder="Enter email"/>
  </div>
  <div class="form-group col-3">
    <label for="password-login">Password:</label>
    <input type="password" class="form-control mt-2" id="password-login" placeholder="Enter password"/>
  </div>
  <div>
    <button type="submit" class="btn btn-primary mt-3 mb-4">Login</button>
  </div>
</form>

<form class="signup-form">
  <h2>Signup</h2>
  <div class="form-group col-3">
    <label for="username-signup">Username:</label>
    <input type="text" class="form-control mt-2" id="username-signup" placeholder="Enter username"/>
  </div>
  <div class="form-group col-3">
    <label for="email-signup">Email:</label>
    <input type="text" class="form-control mt-2" id="email-signup" placeholder="Enter email"/>
  </div>
  <div class="form-group col-3">
    <label for="password-signup">Password:</label>
    <input type="password" class="form-control mt-2" id="password-signup" placeholder="Enter password"/>
  </div>
  <div class="form-group col-3">
    <button type="submit" class="btn btn-primary mt-2">Signup</button>
  </div>
</form>
</center>


<script src="/javascript/login.js"></script>